extends base.pug

block content 
    div#videoController(data-id=video._id)
        video(src=`/${video.fileUrl}`)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span / 
                    span#totalTime 00:00
            input(type="range",step="1", min="0", value="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", min="0", max="1", vaule="0.5")#volume
                span#mute
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand
    //-
        div
            p=video.description
            small=video.createdAt
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
        if(String(loggedInUser._id) === String(video.owner._id))
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
block scripts
    script(src="/static/js/videoPlayer.js") 
    